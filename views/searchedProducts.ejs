  </header>

<body>
  <main>
    <div  class="col-lg-5">
   <h1>Search Results...</h1>
   <div>
    <% if (allProducts && allProducts.length) { %>
        <% allProducts.forEach(function(product) { %>
            <div>
              <img src="<%=  product.image %>" alt="<%= product.name %>">
                <p id="<%= product.name %>">
                Name: <%= product.name %>,
                Description: <%= product.description %>,
                Gender: <%= product.gender %>,
                Size: <%= product.size %>,
                Price: <%= product.price %>
                </p>
                <a href="/man?name=<%= product.name %> ">see me</a>
                <hr>
            </div>
        <% }) %>
    <% } else { %>
        <p>No results found.</p>
    <% } %>
  </div>
</div>

</main>
<hr><!-- LINE-->
<footer>
  <div>
    <button id="contact" type="button" class="btn btn-link un-l">Contact Us</button>
    <p>Find us on Facebook</p>
    <p>Find us on instegram</p>
  </div>
</footer>
</body>
</html>
